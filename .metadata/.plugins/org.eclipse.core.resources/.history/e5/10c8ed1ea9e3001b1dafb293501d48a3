package fempa.diasiniva;

import java.util.Scanner;

public class DiaSinIVA {

	public static void main(String[] args) {
		System.out.println("Programa para calcular precios en el Día sin IVA de MediaMarkt");
		
		float pvp, pvpBruto, ahorro;
		int iva;
		
		Scanner teclado = new Scanner(System.in);
		System.out.print("Introduzca el PVP: ");
		pvp = teclado.nextFloat();
		System.out.print("Introduzca el IVA: ");
		iva = teclado.nextInt();
		
		pvpBruto = pvp / (1+iva);
		ahorro = pvp - pvpBruto;
		
		System.out.println("El precio a pagar serían " + pvpBruto + "€, te has ahorrado " + ahorro + "€");
		
		
		
		/*System.out.println("Programa para resolver ecuaciones de segundo grado");
		System.out.println("ax^2 + bx + c = 0");
		System.out.print("Introduzca a: ");
		System.out.print("Introduzca b: ");
		System.out.print("Introduzca c: ");
		
		System.out.println("ax^2 + bx + c = 0");
		
		System.out.println("Solución: ");*/

	}

}
