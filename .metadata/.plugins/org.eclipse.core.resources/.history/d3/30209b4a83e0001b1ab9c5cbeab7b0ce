package jueves.numeroaleatorio2;

import java.util.Random;
import java.util.Scanner;

public class NumeroAleatorio2 {

	public static void main(String[] args) {
		// Intentos y si está por encima o debajo
		
		// Calcula el número aleatorio:
		Random rand = new Random();
		int numAleat = rand.nextInt(10) + 1;
		
		Scanner scan = new Scanner(System.in);
		boolean acierto = false;
		
		do {
			System.out.print("Introduce un número del 1 al 10: ");
			int numUsuario =  scan.nextInt();
			if (numUsuario == numAleat) {
				System.out.println("Ha acertado!");
				System.out.println("El número secreto era " + numAleat);
				acierto = true;
			} else {
				System.out.println("Lo siento, ha fallado");
				acierto = false;
			}
			//System.out.println(numAleat);
		} while (!acierto);
	}
	
	private void calcNumRandom(int min, int max) {
		
	}

}
