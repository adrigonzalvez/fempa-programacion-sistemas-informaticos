package jueves.numeroaleatorio2;

import java.util.Random;
import java.util.Scanner;

public class NumeroAleatorio2 {

	public static void main(String[] args) {
		// Intentos y si está por encima o debajo
		
		// Calcula el número aleatorio a adivinar
		int numAleat = numRandom(1, 10);
		
		// Crea objeto scanner para capturar la entrada de teclado
		Scanner scan = new Scanner(System.in);
		
		// Variable que controla si el usuario ha acertado el número secreto.
		boolean acierto = false;
		
		// Inicio del juego:
		do {
			System.out.print("\nIntroduce un número del 1 al 10: ");
			
			// Lee el número introducido por el usuario:
			int numUsuario =  scan.nextInt();
			
			// Compara el resultado:
			if (numUsuario == numAleat) {
				System.out.println("Ha acertado!");
				System.out.println("El número secreto era " + numAleat);
				acierto = true;
			} else if (numUsuario > numAleat) {
				System.out.println("El número secreto es MAYOR que " + numUsuario);
				acierto = false;
			} else {
				System.out.println("El número secreto es MENOR que " + numUsuario);
				acierto = false;
			}
			//System.out.println(numAleat);
		} while (!acierto);
	}
	
	private static int numRandom(int min, int max) {
		Random rand = new Random();
		return rand.nextInt(max - min + 1) + min;
	}

}
