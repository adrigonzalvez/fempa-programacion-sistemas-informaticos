package fempa.ecuacionsegundogrado;

import java.util.Scanner;

public class EcuacionSegundoGrado {

	public static void main(String[] args) {
		double a,b,c, x1, x2;
		Scanner teclado = new Scanner(System.in);
		
		System.out.println("Programa para resolver ecuaciones de segundo grado");
		System.out.println("ax^2 + bx + c = 0");
		
		System.out.print("Introduzca a: ");
		a = teclado.nextInt();
		System.out.print("Introduzca b: ");
		b = teclado.nextInt();
		System.out.print("Introduzca c: ");
		c = teclado.nextInt();
		
		System.out.println(a + "x^2 + " + b + "x + " + c + " = 0");
		
		x1 = (-1*b + Math.sqrt(Math.pow(b, 2) - 4*a*c)/2*a);
		x1 = (-1*b - Math.sqrt(Math.pow(b, 2) - 4*a*c)/2*a);
		
		System.out.println("Solución: " + x1 + " y " + x2);

	}

}
