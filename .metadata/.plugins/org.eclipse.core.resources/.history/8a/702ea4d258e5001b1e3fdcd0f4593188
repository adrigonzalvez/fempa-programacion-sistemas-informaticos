package fempa.adivino;

import java.util.Scanner;

public class Adivino {

	public static void main(String[] args) {
		int aleatorio = (int) (Math.random() * 50) + 1; // Math.random() -> Devuelve entre 0 y 0.9999
		boolean acierto = false;
		//System.out.println("Número: " + aleatorio);
		
		Scanner teclado = new Scanner(System.in);
		
		// INTENTO 1:
		System.out.print("Dime un número: ");
		int numero = teclado.nextInt();
		
		if (aleatorio == numero) {
			acierto = true;
			System.out.println("Has acertado, enhorabuena!!");
		} else if (aleatorio > numero) {
			System.out.println("Has fallado, el número secreto es MAYOR.");
		} else {
			System.out.println("Has fallado, el número secreto es MENOR.");
		}
		
		if (!acierto) {
			if (aleatorio == numero) {
				acierto = true;
				System.out.println("Has acertado, enhorabuena!!");
			} else if (aleatorio > numero) {
				System.out.println("Has fallado, el número secreto es MAYOR.");
			} else {
				System.out.println("Has fallado, el número secreto es MENOR.");
			}
		}
		
		if (!acierto) {
			if (aleatorio == numero) {
				acierto = true;
				System.out.println("Has acertado, enhorabuena!!");
			} else if (aleatorio > numero) {
				System.out.println("Has fallado, el número secreto es MAYOR.");
			} else {
				System.out.println("Has fallado, el número secreto es MENOR.");
			}
		}
		
		
		
		
		
		teclado.close();
	}

}
