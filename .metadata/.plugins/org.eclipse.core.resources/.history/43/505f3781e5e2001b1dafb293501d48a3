package viernes.panelletras;

import java.util.ArrayList;

public class PanelLetras {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String frase = "Si el grajo vuela bajo hace un frío del carajo";
		String fraseFinal = "";
		for (int i=0; i < frase.length(); i++) {
			if (frase.charAt(i) == ' ') {
				fraseFinal += " ";
			} else {
				fraseFinal += "*";
			}
			
		}
		
		System.out.println(frase);
		System.out.println(fraseFinal);
		
		
		char letra = 'a';
		
		
		if (frase.contains(String.valueOf(letra))) {
			System.out.println("Correcto, la letra " + letra + " está en el panel.");
			
			//ArrayList<Integer> posiciones = new ArrayList<Integer>();
			int cont = 0;
			char[] charFraseFinal = fraseFinal.toCharArray();
			
			do {
				
				cont = frase.indexOf(letra, cont);
				charFraseFinal[cont] = letra;
			}
			while (cont + 1 != -1) ;
			fraseFinal = charFraseFinal.toString();
			
			
			
			
		} else {
			System.out.println("Lo siento, la letra " + letra + " no se encuentra en el panel.");
		}
		
		
		System.out.println(fraseFinal);
		
	}

}
